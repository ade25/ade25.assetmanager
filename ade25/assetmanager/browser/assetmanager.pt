<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ade25.assetmanager">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <div class="app-asset-manager app-am">
      <div class="app-page-header am-header">
        <a class="am-close icono-cross" href="${context/absolute_url}">
          &times;</a>
        <h1 class="app-page-title am-title">
          Medien Manager
        </h1>
      </div>

      <div class="app-page-block"
          tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
          <div class="app-page-block-content app-page-block-main">
            <aside class="ws-aside">
              <p class="app-page-lead">
                Edit static asset assignements for this content object
              </p>
            </aside>
          </div>
          <div class="app-page-block-content app-page-block-aside">
            <div class="app-workspace-card">
              <a class="ws-action"
                href="${context/absolute_url}/++add++Image"
                i18n:translate="">
                Add image
              </a>
            </div>
          </div>
      </div>

      <div class="app-page-body">
        <div class="app-card app-card-lg app-card-statusinfo"
          tal:condition="not:view/has_assets">
            <div class="app-card-header">
              <figure class="app-card-figure">
                <img class="app-img app-card-image-img b-lazy"
                  src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                  data-src="{{ page.base_url }}assets/img/wertach01.jpg"
                  alt="Pitch title" />
                <figcaption>No sets available yet</figcaption>
              </figure>
            </div>
            <div class="app-card-content">
              This media repository appears to be empty
            </div>
            <div class="app-card-footer app-card-actions">
              <a class="btn btn-default"
                href="${context/absolute_url}/@@select-stack">
                <i class="ion ion-ios7-photos-outline"></i>
                <span i18n:translate="">Add set</span>
            </a>
            </div>
        </div>
      </div>

      <div class="app-page-body app-workspace-content">
        <tal:block tal:condition="not:view/has_assets">
          <div class="ws-section">
            <div class="ws-section-row">
              <div class="ws-section-content">
                <h3><a href="${context/absolute_url}/@@image-factory/${context/UID}">Main image</a></h3>
                <p class="ws-section-desc">
                  Add main image serving as a preview in listings and search results
                </p>
              </div>
              <div class="ws-section-chevron">
                <a href="${context/absolute_url}/@@image-factory/${context/UID}">
                  <i class="icono-caretRight app-icon-anchor ws-icon-next" aria-hidden="true"></i>
                </a>
              </div>
            </div>
          </div><!-- /ws-section -->
        </tal:block>
      </div>
    </div>
  </metal:content-core>
</metal:main>
</body>
</html>
