<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ck.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="app-page app-page-manager">
        <div class="pm-toolbar">
          <div class="pm-navbar">
            <div class="pm-navbar-item pm-navbar-back">
              <a tal:attributes="href context/absolute_url">
                <i class="ion ion-ios7-arrow-thin-left pm-icon"></i>
                Overview
              </a>
            </div>
            <div class="pm-navbar-item pm-navbar-title">
              <span i18n:translate="">Manage Assets</span>
            </div>
          </div>
          <div class="pm-locator">Select Asset</div>
        </div>
        <div class="app-page-body app-asset-manager"
          tal:define="stack_uid python:view.traverse_subpath[0]">
            <div class="app-asset-list" tal:condition="view/has_assets">
                    <div class="app-asset-list-item"
                      tal:repeat="item view/contained_assets">
                      <div class="app-list-metric app-list-metric-thumb">
                        <img class="app-img lazyload"
                              src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                              tal:define="item_obj item/getObject;
                                          scales item_obj/@@images;
                                          thumbnail python: scales.scale('image', width=50, height=50);"
                              tal:condition="thumbnail"
                              tal:attributes="data-src thumbnail/url;
                                              width thumbnail/width;
                                              height thumbnail/height" />
                      </div>
                      <div class="app-list-metric app-list-metric-data">
                        <h5 tal:content="item/Title" />
                      </div>
                      <div class="app-list-metric app-list-metric-action">
                          <a class="metric-action" href="${context/absolute_url}/@@assign-asset/${stack_uid}/${item/UID}">
                            <span i18n:translate="">Select</span>
                            <i class="ion ion-ios7-arrow-right pm-icon"></i>
                          </a>
                      </div>
                    </div>
              </div>

        </div>
    </div>
  </metal:content-core>
</metal:main>
</body>
</html>