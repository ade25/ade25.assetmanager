<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ade25.assetmanager">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="app-asset-repository">
      <div class="app-page-header">
        <div class="app-page-block app-page-toolbar"
          tal:define="context_state context/@@plone_context_state;
                      parent context_state/parent">
          <div class="app-page-block-content app-page-toolbar-title">
            <div class="app-page-toolbar-name">Media Manager</div>
            <small>Manage ${context/Title} set</small>
          </div>
          <div class="app-page-block-aside">
            <a class="app-page-toolbar-action" href="#"
              tal:attributes="href string:${context/absolute_url}/++add++ade25.assetmanager.stack">
              <span i18n:translate="">Add new set</span>
            </a>
          </div>
        </div>
      </div>
      <div class="app-page-header">
        <div class="app-page-toolbar"
          tal:define="context_state context/@@plone_context_state;
                      parent context_state/parent">
          <a class="app-page-toolbar-action pull-right" href="#"
            tal:attributes="href string:${context/absolute_url}/++add++ade25.assetmanager.stack">
            <i class="fa fa-plus"></i>
            <span i18n:translate="">Add image</span>
          </a>
          <a class="app-page-toolbar-action pull-right" href="#"
            tal:attributes="href string:${context/absolute_url}/folder_contents">
            <i class="fa fa-th-list"></i>
            <span i18n:translate="">Manage images</span>
          </a>
          <div class="app-page-toolbar-title">
            <a class="app-page-toolbar-name" href="${parent/absolute_url}">Media Manager</a>
            &raquo; Manage ${context/Title}
          </div>
        </div>
      </div>

      <div class="app-page-body app-repository-content">

        <div class="app-page-block"
            tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
            <div class="app-page-block-content app-page-block-main">
              <aside class="ws-aside">
                <p class="app-page-abstract">
                  A dedicated stack or set of related and grouped media assets
                </p>
              </aside>
            </div>
            <div class="app-page-block-content app-page-block-aside">
              <div class="app-workspace-card">
                <tal:block tal:repeat="item view/addable_media_types">
                  <a class="ws-action"
                    href="${context/absolute_url}/++add++${item/factory}"
                    tal:attributes="title item/Description">
                    <span i18n:translate="">Add new</span>
                    ${item/Title}
                  </a>
                </tal:block>
              </div>
            </div>
        </div>
          <div class="app-repository-toolbar">
            <a class="btn btn-link pull-right" href="#"
              tal:attributes="href string:${context/absolute_url}/++add++Image">
              <i class="ion ion-ios7-upload-outline app-icon-lg"></i>
              <span i18n:translate="">Add image</span>
            </a>
            <a class="btn btn-link pull-right" href="#"
              tal:attributes="href string:${context/absolute_url}/folder_contents">
              <i class="ion ion-ios7-photos-outline app-icon-lg"></i>
              <span i18n:translate="">Manage assets</span>
            </a>
            <div class="app-repository-toolbar-title">Image Stack</div>
          </div>
            <div class="app-listing app-listing-cards"
              tal:define="Batch python:modules['Products.CMFPlone'].Batch;
                          b_size python:int(request.get('b_size', 20));
                          b_start python:int(request.get('b_start', 0));
                          results python:context.restrictedTraverse('@@folderListing')(batch=True, b_size=b_size, b_start=b_start);
                          batch python:Batch(results, b_size, b_start);">
                <div class="app-listing-card" tal:repeat="item results">
                  <div class="app-card app-card-image"
                      <div class="app-card-media">
                          <img class="app-img lazyload"
                              src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                              tal:define="item_obj item/getObject;
                                          scales item_obj/@@images;
                                          thumbnail python: scales.scale('image', width=250, height=250);"
                              tal:condition="thumbnail"
                              tal:attributes="data-src thumbnail/url;
                                              src thumbnail/url;
                                              width thumbnail/width;
                                              height thumbnail/height" />
                      </div>
                      <div class="app-card-info app-card-caption">
                        <div class="app-card-title" tal:content="item/Title" />
                      </div>
                      <div class="app-card-footer">
                        <a class="btn btn-default btn-sm"
                          tal:attributes="href string:${context/absolute_url}/@@asset-editor/${item/UID}">
                          Edit <i class="fa fa-angle-right"></i>
                        </a>
                </div>
            </div>
            <div class="app-listing-nav">
              <div metal:use-macro="context/batch_macros/macros/navigation" />
            </div>
          </div>
      </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>
